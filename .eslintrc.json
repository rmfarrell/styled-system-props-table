{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "react-app"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "eol-last": [
      2,
      "always"
    ],
    "indent": [
      "error",
      2,
      {
        "VariableDeclarator": 1
      }
    ],
    "space-before-function-paren": [
      0,
      "always"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}